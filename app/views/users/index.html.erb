<h2>List of Users</h2>

<div class="driver container-lg">

  <table class="table table-hover">
    <thead>
      <tr>
      <th>Username</th>
      <th>Votes</th>
      <th>Joined</th>
      </tr>
    <thead>

    <tbody>
      <% @users.each do |user|  %>
        <tr class="clickable-tr" data-path="<%= user_path(user)%>" >
          <td><%= user.username %></td>
          <td><%= user.works.length %></td>
          <td><%= user.updated_at.strftime("%B %d, %Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<%= link_to "Back to Media List", root_path %>




